// my-backend/tsconfig.json
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "emitDecoratorMetadata": true, // Required for TypeORM
    "experimentalDecorators": true // Required for TypeORM
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}